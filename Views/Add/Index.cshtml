
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Application</h2>
<mark color="red">If you want to add an application please do so completely. Do not close the application or go to a different page without verifying the new information first and going through bothe steps and saving the application, as this may result in garbage data being stored in the AAIS database. </mark>
<br/>
<br/>


<h5>1) Vendor Information</h5>

<ul class="nav nav-tabs m-b-10" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="existingvendor-tab" data-toggle="tab" href="#existingvendor" role="tab" aria-controls="existingvendor" aria-expanded="true">Select Existing</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="newvendor-tab" data-toggle="tab" href="#newvendor" role="tab" aria-controls="newvendor" aria-expanded="false">Create New</a>
    </li>
</ul>

<div class="tab-content" id="myTabContent">
    <div role="tabpanel" class="tab-pane fade in active show" id="existingvendor" aria-labelledby="existingvendor-tab" aria-expanded="true">
        @using (Html.BeginForm("Main", "Add", FormMethod.Post))
        {
        <fieldset class="form-group">
            <label for="exampleSelect2">Select from current vendors below:</label>
            <select class="form-control" id="vendorSelect" name="vendorSelect">
                @foreach (var item in @ViewBag.appVendors)
                {
                    <option>@item.VendName</option>
                }
            </select>
        </fieldset>
        <div align="right">
            <button type="submit" class="btn btn-primary">Continue</button>
        </div>
        }
    </div>
    <div class="tab-pane fade" id="newvendor" role="tabpanel" aria-labelledby="newvendor-tab" aria-expanded="false">
        @using (Html.BeginForm("Main", "Add", FormMethod.Post))
        {
        <h5>Vendor Main Info</h5>
        <div class="form-group row">
            <label for="example-text-input" class="col-2 col-form-label" style="color:red">Vendor Name (mandatory)</label>
            <div class="col-10">
                <input class="form-control" type="text" id="vendorName" name="vendorName" maxlength="50">
            </div>
        </div>


        <div class="form-group-row">

            <div class="form-group">
                <!-- Street 1 -->
                <label for="street1_id" class="control-label">Street Address</label>
                <input type="text" class="form-control" id="street1" name="street1" placeholder="Street address, P.O. box, company name, c/o" maxlength="30">
            </div>

            <div class="form-group">
                <!-- City-->
                <label for="city_id" class="control-label">City</label>
                <input type="text" class="form-control" id="city" name="city" placeholder="City" maxlength="15">
            </div>

            <div class="form-group">
                <!-- City-->
                <label for="province_id" class="control-label">Province/State</label>
                <input type="text" class="form-control" id="province" name="province" maxlength="10">
            </div>

            <div class="form-group">
                <!-- Zip Code-->
                <label for="zip_id" class="control-label">Postal/Zip Code</label>
                <input type="text" class="form-control" id="zip" name="zip" placeholder="#####" maxlength="6">
            </div>


        </div>

        <div class="form-group row">
            <label for="example-url-input" class="col-2 col-form-label">Vendor URL</label>
            <div class="col-10">
                <input class="form-control" type="url" placeholder="https://example.com" id="vendURL" name="vendURL">
            </div>
        </div>

        <h5>Vendor Support</h5>

        <div class="form-group row">
            <label for="example-time-input" class="col-2 col-form-label">Support Hours</label>
            <input class="form-control" type="text" placeholder="8AM - 4PM" id="startTime" name="startTime" maxlength="30">
        </div>
        <br />
        <div class="form-group row">
            <label for="example-tel-input" class="col-2 col-form-label">Vendor Phone Number</label>
            <div class="col-10">
                <input class="form-control" type="tel" placeholder="1-(555)-555-5555" id="vendTel" name="vendTel" maxlength="25">
            </div>
        </div>

        <div class="form-group row">
            <label for="example-email-input" class="col-2 col-form-label">Vendor Email</label>
            <div class="col-10">
                <input class="form-control" type="email" placeholder="bootstrap@example.com" id="vendEmail" name="vendEmail" maxlength="50">
            </div>
        </div>

        <fieldset class="form-group">
            <label for="exampleTextarea">Support Comments</label>
            <textarea class="form-control" id="supportComments" name="supportComments" rows="3"></textarea>
        </fieldset>

        <div align="right">
            <button type="submit" class="btn btn-primary">Save and Continue</button>
        </div>
        }
    </div>

        </div>
       

<br/>
